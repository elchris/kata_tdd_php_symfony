{
    "name": "chrisholland/kata_tdd_php_symfony",
    "type": "project",
    "description" : "Various exercises in Test-Driven Development of projects built in PHP with Symfony 3",
    "keywords": ["TDD", "kata", "symfony", "php"],
    "homepage": "https://github.com/elchris/kata_tdd_php_symfony",
    "license": "MIT",
    "authors": [
      {
        "name": "Chris Holland",
        "email": "frenchy@gmail.com",
        "homepage": "http://www.linkedin.com/in/chrisholland",
        "role": "Developer"
      }
    ],
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2",
        "doctrine/orm": "^2.6",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "symfony/monolog-bundle": "^3.0",
        "symfony/polyfill-apcu": "^1.0",
        "incenteev/composer-parameter-handler": "^2.0",
        "doctrine/doctrine-migrations-bundle": "^1.3",
        "squizlabs/php_codesniffer": "*",
        "friendsofsymfony/rest-bundle": "^2.3",
        "jms/serializer-bundle": "^2.3",
        "nelmio/cors-bundle": "^1.5",
        "ramsey/uuid-doctrine": "^1.5",
        "symfony/symfony": "^4.3",
        "friendsofsymfony/user-bundle": "^2.0",
        "friendsofsymfony/oauth-server-bundle": "^1.5",
        "symfony/process": "^4.3",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/templating": "^4.3"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^4.2",
        "phpunit/phpunit": "^7.0",
        "codeception/codeception": "^2.4"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": null
    }
}
